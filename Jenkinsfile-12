pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build') {
            steps {
                sh "docker build -t jacekcracow/abctechnologies-latest-with-ansible:${BUILD_NUMBER} ." // Correct docker build command
            }
        }
        stage('Docker Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh "docker login -u ${USERNAME} -p ${PASSWORD}"
                    sh "docker push jacekcracow/abctechnologies-latest-with-ansible:${BUILD_NUMBER}"
                }
            }
        }
        stage('Test permissions for Ansible') {
            steps {
                sh('which ansible-playbook')
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sshagent(credentials: ['ansible-ssh-key']) { // ***CRITICAL: Correct credential ID***
                        sh '''
                            echo "Starting SSH Agent..."
                            eval "$(ssh-agent -s)"  // ***CRITICAL: Start the agent in the correct shell***
                            echo "SSH_AUTH_SOCK: $SSH_AUTH_SOCK" // Verify agent is running

                            echo "Testing SSH Agent Forwarding..."
                            ssh -A vagrant@192.168.122.238 'echo $SSH_AUTH_SOCK'  // ***CRITICAL TEST: Check on knode1***

                            echo "Running Ansible Playbook..."
                            ansible-playbook deploy_docker_image2.yaml -i /etc/ansible/hosts -e "build_number=${BUILD_NUMBER}"
                        '''
                    }
                }
            }
        }
    }
}
