pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sshagent(credentials: ['ansible-ssh-key']) {
                        withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                            env.DOCKER_IMAGE = "jacekcracow/abctechnologies-latest-with-ansible:${BUILD_NUMBER}"
                            env.DOCKER_USERNAME = USERNAME
                            env.DOCKER_PASSWORD = PASSWORD

                            sh "ansible-playbook deploy_docker_image2.yaml -i /etc/ansible/hosts"
                        }
                    }
                }
            }
        }
    }
}
