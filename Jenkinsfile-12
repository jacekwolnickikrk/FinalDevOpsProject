pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Maven build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sshagent(credentials: ['ansible-ssh-key']) {
                        sh """
                            withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                                ansible-playbook deploy_docker_image.yaml -i /etc/ansible/hosts -e "build_number=${BUILD_NUMBER} docker_username=\${USERNAME} docker_password=\${PASSWORD}"
                            }
                        """
                    }
                }
            }
        }
    }
}
