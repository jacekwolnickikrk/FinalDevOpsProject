/* Second pipeline,  Task 3,  step 1 */

pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t jacekcracow/abctechnologies-latest:${BUILD_NUMBER} .'
            }
        }
        stage('Docker Login') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push jacekcracow/abctechnologies-latest:${BUILD_NUMBER}'
            }
        }
        stage('Docker Run') {
            steps {
                sh 'docker run -d -p 8090:8080 jacekcracow/abctechnologies-latest:${BUILD_NUMBER}'
            }
        }
    }
post {
  always {
    sh 'docker logout'
    }
  }
}
