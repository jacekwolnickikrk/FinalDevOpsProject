pipeline {
    agent any
    tools {
        maven 'maven'
        ansible 'ansible'  // Add Ansible installation
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    playbook: 'docker_build_and_deploy.yml',  // Path to the playbook
                    inventory: 'localhost,',  // Use localhost since we're running locally
                    extras: "-e BUILD_NUMBER=${BUILD_NUMBER}"
                )
            }
        }
    }
    post {
        always {
            // Optionally, you can ensure docker logout here if not handled in Ansible
            sh 'docker logout'
        }
    }
}
