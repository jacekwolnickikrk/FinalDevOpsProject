pipeline {
  agent any
  tools {
    maven 'maven'
    ansible 'ansible'
  }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Compile') {
      steps {
        sh 'mvn compile'
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('Package') {
      steps {
        sh 'mvn package'
      }
    }
    stage('Build and publish with Ansible') {
      steps {
        script {
          withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
              ansiblePlaybook: 'docker_deploy.yaml'
                inventory: '/etc/ansible/hosts'
                extra_vars: "-e 'docker_username=${USERNAME}' -e 'docker_password=${PASSWORD}'"
          }
        }
      }
    }
  }
}
