pipeline {
    agent any
    tools {
        maven 'maven'
        ansible 'ansible' 
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker') // Jenkins credential ID
        DOCKERHUB_CREDENTIALS_USR = "${DOCKERHUB_CREDENTIALS_USR}" // Access username from credentials
        DOCKERHUB_CREDENTIALS_PSW = "${DOCKERHUB_CREDENTIALS_PSW}" // Access password from credentials
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Package') { // More appropriate name than 'Deploy' for this stage
            steps {
                sh 'mvn package'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Extract credentials
                    def credentials = credentials('jacek-docker')
                    env.DOCKERHUB_CREDENTIALS_USR = credentials.username
                    env.DOCKERHUB_CREDENTIALS_PSW = credentials.password

                    ansiblePlaybook(
                        playbook: 'docker_deploy3.yml', // Use the correct playbook name
                        extras: "-e BUILD_NUMBER=${BUILD_NUMBER}"
                    )
                }
            }
        }
    }
    post {
        always {
            // This logout might not be necessary on the Jenkins agent itself.
            // Logout happens on the Docker host in the playbook.
            // sh 'docker logout'  # Consider removing this line
        }
    }
}
