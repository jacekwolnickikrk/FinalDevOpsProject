pipeline {
    agent any
    tools {
        maven 'maven'
        ansible 'ansible' // If using the Ansible plugin (recommended)
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm // Or your specific SCM configuration
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                // Option 1: Using the Ansible plugin (Recommended)
                ansiblePlaybook(
                    playbook: 'docker_build_and_deploy2.yml', // Path relative to workspace root
                    inventory: 'inventory', // Path relative to workspace root
                    extras: "-e BUILD_NUMBER=${BUILD_NUMBER}"
                )
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
