pipeline {
    agent any
    tools {
        maven 'maven'
        ansible 'ansible' // Add Ansible tool if using the Ansible plugin
    }
    environment {
        DOCKERHUB_CREDENTIALS = credentials('jacek-docker')
    }
    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                ansible-playbook(
                    playbook: 'docker_build_and_deploy2.yml'
                    inventory: 'hosts'
                    extras: "-e "BUILD_NUMBER=${BUILD_NUMBER}"
                '''
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
