pipeline {
    agent any
    tools {
        maven 'maven'
    }
    environment {
        DOCKERHUB_CREDENTIALS_USR = credentials('jacek-docker-user')
        DOCKERHUB_CREDENTIALS_PSW = credentials('jacek-docker-password')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm // Or specify your SCM configuration
            }
        }
        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Ansible Playbook Execution') {
            steps {
                sh '''
                    # Install Ansible if not already present in your Jenkins agent
                    # For Debian/Ubuntu based agents:
                    # sudo apt-get update && sudo apt-get install -y ansible

                    # For RedHat based agents:
                    # sudo yum update -y && sudo yum install -y ansible

                    ansible-playbook your-ansible-playbook.yml -i inventory --extra-vars "BUILD_NUMBER=${BUILD_NUMBER}"
                '''
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
