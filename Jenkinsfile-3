pipeline {
    agent any
    tools {
        maven 'maven' // If you need Maven
    }
    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile' // If you need Maven
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test' // If you need Maven
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package' // If you need Maven
            }
        }
        stage('Build and Deploy') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    echo "Docker Username: ${DOCKER_USERNAME}" // Verify (Masked in Jenkins console)
                    echo "Docker Password: ${DOCKER_PASSWORD}" // Verify (Masked in Jenkins console)

                    ansiblePlaybook(
                        playbook: 'docker_deploy2.yml',
                        extraVars: [
                            build_number: BUILD_NUMBER,
                            docker_username: DOCKER_USERNAME,  // Pass directly to Ansible plugin
                            docker_password: DOCKER_PASSWORD   // Pass directly to Ansible plugin
                        ]
                    )
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
