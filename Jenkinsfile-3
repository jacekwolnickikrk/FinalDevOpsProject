pipeline {
    agent any
    tools {
        maven 'maven' // If you need Maven
    }
    stages {
        stage('Compile') {
            steps {
                sh 'mvn compile' // If you need Maven
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test' // If you need Maven
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn package' // If you need Maven
            }
        }
        stage('Build and Deploy') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'jacek-docker', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    docker.image('your-actual-ansible-image').inside {  // ***REPLACE THIS***
                        sh '''
                            ansible-playbook docker_deploy2.yml -e "build_number=${BUILD_NUMBER} docker_username=${DOCKER_USERNAME} docker_password=${DOCKER_PASSWORD}"
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
